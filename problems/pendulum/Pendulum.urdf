<?xml version="1.0"?>

<robot name="SimplePendulum">
  <!-- Base link of the pendulum -->
  <link name="base_link">
    <visual>
      <geometry>
         <box size="0.2 0.2 0.2" />
      </geometry>
      <material name="green">
         <color rgba="0 1 0 1" />
      </material>
    </visual>
  </link>

  <!-- Pendulum link -->
  <link name="pendulum_link">
    <visual>
      <origin xyz="0 0 -0.5" rpy="0 0 0" />
      <geometry>
         <cylinder length="1.0" radius="0.05" />
      </geometry>
      <material name="red">
         <color rgba="1 0 0 1" />
      </material>
    </visual>
  </link>

  <!-- Joint connecting the base to the pendulum link -->
  <joint name="pendulum_joint" type="revolute">
    <parent link="base_link" />
    <child link="pendulum_link" />
    <origin xyz="0 0 0" rpy="0 0 0" />
    <axis xyz="0 1 0" />
  </joint>

</robot>